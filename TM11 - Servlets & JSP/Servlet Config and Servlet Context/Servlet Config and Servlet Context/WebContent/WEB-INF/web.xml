<?xml version="1.0" encoding="UTF-8"?>
<web-app >

	<servlet>
		<servlet-name>Assignment1</servlet-name>
		<servlet-class>Assignment1</servlet-class>

		<!-- For ServletConfig -->
		<init-param>
			<param-name>name</param-name>
			<param-value>xyz</param-value>
		</init-param>

		
		<init-param>
			<param-name>password</param-name>
			<param-value>hello</param-value>
		</init-param>
		
	</servlet>

	<!-- For ServletContext -->
	<context-param>
		<param-name>Email</param-name>
		<param-value>abc@example.com</param-value>
	</context-param>
    <context-param>
		<param-name>Address</param-name>
		<param-value>Telangana</param-value>
	</context-param>
    
	<servlet-mapping>
		<servlet-name>Assignment1</servlet-name>
		<url-pattern>/Assignment1</url-pattern>
	</servlet-mapping>

</web-app>